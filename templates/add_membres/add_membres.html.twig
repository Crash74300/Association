{% extends 'base.html.twig' %}

{% block title %}Ajouter un membre{% endblock %}
{% block nav %}
    <a class="btn btn-sm btn-info m-2" href="{{ path('app_membres') }}" >Retour</a>
{% endblock %}
{% block content %}
    <div class="text-center mb-5">
        <h1 class="text-center m-3">{{app.user.name}}</h1>
        <h2 class="text-center m-3">Gestion des membres de l'association</h2>
    </div>

    {{ form_start(form) }}
<div class="row justify-content-center ">
    <div class="col-5">{{ form_row(form.nom) }}</div>
    <div class="col-5">{{ form_row(form.prenom) }}</div>
    <div class="col-10">{{ form_row(form.adresse) }}</div>
    <div class="col-5">{{ form_row(form.telephone) }}</div>
    <div class="col-5">{{ form_row(form.role) }}</div>
    <div class="text-center">{{ form_row(form.submit) }}</div>

</div>
    {{ form_end(form) }}

{% endblock %}
