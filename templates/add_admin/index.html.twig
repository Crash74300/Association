{% extends 'base.html.twig' %}

{% block title %}Hello AddAdminController!{% endblock %}
{% block nav %}
    <a class="btn btn-sm btn-info m-2" href="{{ path('app_admin_home') }}" >Retour</a>
{% endblock %}
{% block content %}
    <div class="text-center mb-5">

        <h2 class="text-center m-3">Gestion des administrateurs</h2>
    </div>
    {{ form_start(form) }}
    <div class="row justify-content-center ">
        <div class="col-7 col-md-5">{{ form_row(form.name) }}</div>
        <div class="col-7 col-md-5">{{ form_row(form.email) }}</div>
        <div class="col-7 col-md-10">{{ form_row(form.super_admin) }}</div>
        <div class="col-10">{{ form_row(form.password) }}</div>
        <div class="text-center">{{ form_row(form.submit) }}</div>

    </div>
    {{ form_end(form) }}
{% endblock %}
