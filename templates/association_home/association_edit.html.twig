{% extends 'base.html.twig' %}

{% block title %}Modifier mon association{% endblock %}
{% block nav %}
    <a class="btn btn-sm btn-info m-2" href="{{ path('app_association_home') }}" >Retour</a>
{% endblock %}

{% block content %}
    <div class="text-center mb-5">
        {% for message in app.flashes('notice')%}
            <div class="container alert alert-info text-center justify-content-center w-50">{{ message }}</div>
        {% endfor %}
        <h2 class="text-center m-3">{{app.user.name}}</h2>
        <h2 class="text-center m-3">Modifier les informations</h2>
    </div>
    {{ form_start(form) }}
    <div class="row justify-content-center ">
        <div class="col-10 col-md-5">{{ form_row(form.name) }}</div>
        <div class="col-10 col-md-5">{{ form_row(form.email) }}</div>
        <div class="col-10 col-md-5">{{ form_row(form.phone) }}</div>
        <div class="text-center">{{ form_row(form.submit) }}</div>

    </div>
    {{ form_end(form) }}
{% endblock %}
