{% extends 'base.html.twig' %}

{% block title %}Modifier mon mot de passe{% endblock %}
{% block nav %}
    <a class="btn btn-sm btn-info m-2" href="{{ path('app_association_home') }}" >Retour</a>
{% endblock %}

{% block content %}
    <div class="text-center mb-5">

        <h2 class="text-center m-3">{{app.user.name}}</h2>
        <h2 class="text-center m-3">Modifier le mot de passe</h2>
    </div>
    {{ form_start(form) }}
    <div class="row justify-content-center ">
        <div class="col-10 col-md-5">{{ form_row(form.name) }}</div>
        <div class="col-10 col-md-5">{{ form_row(form.email) }}</div>
        <div class="col-10 col-md-5">{{ form_row(form.phone) }}</div>
        <div class="col-10 col-md-5"></div>
        <div class="col-10">{{ form_row(form.old_password) }}</div>
        <div class="col-10 ">{{ form_row(form.new_password) }}</div>
        <div class="text-center">{{ form_row(form.submit) }}</div>

    </div>
    {{ form_end(form) }}
{% endblock %}
